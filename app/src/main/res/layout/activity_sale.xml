<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sale"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.utt.application.isradeleon.vendedorescorso.SaleActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@color/colorDarkGray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/prev_button"
                    android:background="@null"
                    android:src="@drawable/ic_keyboard_arrow_left_white_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <ViewFlipper
                    android:outAnimation="@android:anim/fade_out"
                    android:inAnimation="@android:anim/fade_in"
                    android:id="@+id/photos_flipper"
                    android:layout_width="200dp"
                    android:layout_height="140dp">
                </ViewFlipper>
                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/next_button"
                    android:background="@null"
                    android:src="@drawable/ic_keyboard_arrow_right_white_36dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:padding="20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="Propiedad:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/address"
                    android:text="#44 int 99, calle nose que col centro hidalgo no se"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/house_city"
                    android:textStyle="bold"
                    android:text="Ciudad Nose, Coahuila."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <Button
                    android:layout_gravity="right"
                    android:id="@+id/maps_button"
                    android:textColor="#fff"
                    android:backgroundTint="@color/colorInfo"
                    android:text="VER EN MAPS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="Detalles de Venta:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sale_start"
                    android:layout_gravity="right"
                    android:textStyle="italic"
                    android:text="Inició: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/sale_end"
                    android:layout_gravity="right"
                    android:textStyle="italic"
                    android:text="Se cerró: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="Folio: ?"
                    android:textStyle="bold"
                    android:id="@+id/folio_venta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Status: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status_fail"
                        android:text="Cancelada"
                        android:textColor="#E53935"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status_ok"
                        android:text="Concretada"
                        android:textColor="#43A047"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/status_tramite"
                        android:text="En trámite"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:id="@+id/client_name"
                    android:textStyle="bold"
                    android:text="Alejandro Ficticio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/secretaria_nombre"
                    android:text="Secretaria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/monto"
                    android:text="Monto: $3423423423"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/monto_cubierto"
                    android:text="Monto cubierto el dia "
                    android:textColor="#43A047"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="25dp" />
                <TextView
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:text="Documentos entregados:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                            android:id="@+id/first_document"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:text=" Acta de nacimiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                            android:id="@+id/second_document"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:text=" INE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/seccion_escrituras"
                        android:visibility="gone"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:src="@drawable/ic_check_box_outline_blank_black_24dp"
                            android:id="@+id/third_document"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textStyle="bold"
                            android:text=" Escrituras"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.v4.widget.DrawerLayout>
